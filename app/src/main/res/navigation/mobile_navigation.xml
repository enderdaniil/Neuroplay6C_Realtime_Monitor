<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mobile_navigation"
    app:startDestination="@+id/navigation_info">

    <fragment
        android:id="@+id/navigation_info"
        android:name="com.example.coursach_0.ui.info.InfoFragment"
        android:label="@string/title_info"
        tools:layout="@layout/fragment_info" />

    <fragment
        android:id="@+id/navigation_rhythms"
        android:name="com.example.coursach_0.ui.rhythms.RhythmsFragment"
        android:label="@string/title_rhythms"
        tools:layout="@layout/fragment_rhythms" />

    <fragment
        android:id="@+id/navigation_filters"
        android:name="com.example.coursach_0.ui.filters.FiltersFragment"
        android:label="@string/title_filters"
        tools:layout="@layout/fragment_filters" />
    <fragment
        android:id="@+id/navigation_settings"
        android:name="com.example.coursach_0.ui.settings.SettingsFragment"
        android:label="@string/title_settings"
        tools:layout="@layout/fragment_settings" />
    <fragment
        android:id="@+id/navigation_help"
        android:name="com.example.coursach_0.ui.help.HelpFragment"
        android:label="@string/title_help"
        tools:layout="@layout/fragment_help" />
</navigation>