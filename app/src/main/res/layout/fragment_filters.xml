<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/spectrum_view"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.filters.FiltersFragment">

    <TextView
        android:id="@+id/text_filters"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:ignore="MissingConstraints" />

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/spectrum_bar_chart_O1_card"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_margin="4sp"
        app:cardElevation="2dp"
        app:strokeColor="?attr/colorPrimary"
        app:strokeWidth="1dp">
        <com.github.mikephil.charting.charts.BarChart
            android:id="@+id/spectrum_bar_chart_O1"
            android:layout_width="match_parent"
            android:layout_height="80sp"
            android:layout_marginEnd="8sp"
            android:layout_marginStart="8sp"
            android:layout_marginTop="0sp"
            app:layout_constraintTop_toTopOf="parent"/>
    </com.google.android.material.card.MaterialCardView>

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/spectrum_bar_chart_T3_card"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        app:layout_constraintTop_toBottomOf="@+id/spectrum_bar_chart_O1_card"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_margin="4sp"
        app:cardElevation="2dp"
        app:strokeColor="?attr/colorPrimary"
        app:strokeWidth="1dp">
    <com.github.mikephil.charting.charts.BarChart
        android:id="@+id/spectrum_bar_chart_T3"
        android:layout_width="match_parent"
        android:layout_height="80sp"
        android:layout_marginEnd="8sp"
        android:layout_marginStart="8sp"
        android:layout_marginTop="10sp"
        android:layout_marginBottom="4sp" />
    </com.google.android.material.card.MaterialCardView>

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/spectrum_bar_chart_Fp1_card"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        app:layout_constraintTop_toBottomOf="@+id/spectrum_bar_chart_T3_card"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_margin="4sp"
        app:cardElevation="2dp"
        app:strokeColor="?attr/colorPrimary"
        app:strokeWidth="1dp">
    <com.github.mikephil.charting.charts.BarChart
        android:id="@+id/spectrum_bar_chart_Fp1"
        android:layout_width="match_parent"
        android:layout_height="80sp"
        android:layout_marginEnd="8sp"
        android:layout_marginStart="8sp"
        android:layout_marginTop="4sp"
        android:layout_marginBottom="4sp" />
    </com.google.android.material.card.MaterialCardView>

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/spectrum_bar_chart_Fp2_card"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        app:layout_constraintTop_toBottomOf="@+id/spectrum_bar_chart_Fp1_card"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_margin="4sp"
        app:cardElevation="2dp"
        app:strokeColor="?attr/colorPrimary"
        app:strokeWidth="1dp">
        <com.github.mikephil.charting.charts.BarChart
            android:id="@+id/spectrum_bar_chart_Fp2"
            android:layout_width="match_parent"
            android:layout_height="80sp"
            android:layout_marginEnd="8sp"
            android:layout_marginStart="8sp"
            android:layout_marginTop="4sp"
            android:layout_marginBottom="4sp"
            app:layout_constraintTop_toBottomOf="@+id/spectrum_bar_chart_Fp1" />
    </com.google.android.material.card.MaterialCardView>

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/spectrum_bar_chart_T4_card"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        app:layout_constraintTop_toBottomOf="@+id/spectrum_bar_chart_Fp2_card"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_margin="4sp"
        app:cardElevation="2dp"
        app:strokeColor="?attr/colorPrimary"
        app:strokeWidth="1dp">
      <com.github.mikephil.charting.charts.BarChart
          android:id="@+id/spectrum_bar_chart_T4"
          android:layout_width="match_parent"
          android:layout_marginEnd="8sp"
          android:layout_marginStart="8sp"
          android:layout_height="80sp"
          android:layout_marginTop="4sp"
          android:layout_marginBottom="4sp" />
    </com.google.android.material.card.MaterialCardView>

    <com.google.android.material.card.MaterialCardView
        android:id="@+id/spectrum_bar_chart_O2_card"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        app:layout_constraintTop_toBottomOf="@+id/spectrum_bar_chart_T4_card"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_margin="4sp"
        app:cardElevation="2dp"
        app:strokeColor="?attr/colorPrimary"
        app:strokeWidth="1dp">
    <com.github.mikephil.charting.charts.BarChart
        android:id="@+id/spectrum_bar_chart_O2"
        android:layout_width="match_parent"
        android:layout_marginEnd="8sp"
        android:layout_marginStart="8sp"
        android:layout_height="80sp"
        android:layout_marginTop="4sp"
        android:layout_marginBottom="4sp"/>
    </com.google.android.material.card.MaterialCardView>
</androidx.constraintlayout.widget.ConstraintLayout>