<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/spectrum_view"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.filters.FiltersFragment">

    <TextView
        android:id="@+id/text_filters"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        tools:ignore="MissingConstraints" />

    <com.github.mikephil.charting.charts.BarChart
        android:id="@+id/spectrum_bar_chart_O1"
        android:layout_width="match_parent"
        android:layout_height="100sp"
        android:layout_marginTop="0sp"
        app:layout_constraintTop_toTopOf="parent"/>

    <com.github.mikephil.charting.charts.BarChart
        android:id="@+id/spectrum_bar_chart_T3"
        android:layout_width="match_parent"
        android:layout_height="100sp"
        android:layout_marginTop="4sp"
        android:layout_marginBottom="4sp"
        app:layout_constraintTop_toBottomOf="@+id/spectrum_bar_chart_O1" />

    <com.github.mikephil.charting.charts.BarChart
        android:id="@+id/spectrum_bar_chart_Fp1"
        android:layout_width="match_parent"
        android:layout_height="100sp"
        android:layout_marginTop="4sp"
        android:layout_marginBottom="4sp"
        app:layout_constraintTop_toBottomOf="@+id/spectrum_bar_chart_T3" />

        <com.github.mikephil.charting.charts.BarChart
            android:id="@+id/spectrum_bar_chart_Fp2"
            android:layout_width="match_parent"
            android:layout_height="100sp"
            android:layout_marginTop="4sp"
            android:layout_marginBottom="4sp"
            app:layout_constraintTop_toBottomOf="@+id/spectrum_bar_chart_Fp1" />

      <com.github.mikephil.charting.charts.BarChart
          android:id="@+id/spectrum_bar_chart_T4"
          android:layout_width="match_parent"
          android:layout_height="100sp"
          android:layout_marginTop="4sp"
          android:layout_marginBottom="4sp"
          app:layout_constraintTop_toBottomOf="@+id/spectrum_bar_chart_Fp2" />

    <com.github.mikephil.charting.charts.BarChart
        android:id="@+id/spectrum_bar_chart_O2"
        android:layout_width="match_parent"
        android:layout_height="100sp"
        android:layout_marginTop="4sp"
        android:layout_marginBottom="4sp"
        app:layout_constraintTop_toBottomOf="@+id/spectrum_bar_chart_T4" />
</androidx.constraintlayout.widget.ConstraintLayout>